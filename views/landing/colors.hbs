<script>
  function colorGenerator() {
    var color = '#'+Math.floor(Math.random()*16777215).toString(16);
    return color;
  }
  var spectrum = function() {

    function go(element, attr) {
      element.css('-webkit-transition', 'all 0.7s ease')
             .css('-o-transition', 'all 0.7s ease')
             .css('transition', 'all 0.7s ease')
             .css(attr, colorGenerator());
    }

    go($('.login-facebook'), 'background-color');
    go($('.fa'), 'color');
  };
  setInterval(spectrum, 400);
</script>